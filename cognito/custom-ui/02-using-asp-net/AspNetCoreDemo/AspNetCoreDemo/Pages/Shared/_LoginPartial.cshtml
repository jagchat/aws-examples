@using Microsoft.AspNetCore.Identity
@using Amazon.Extensions.CognitoAuthentication

@inject SignInManager<CognitoUser> SignInManager
@inject UserManager<CognitoUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Logout" asp-route-returnUrl="@Url.Page(" /Index", new { area="" })" method="post" id="logoutForm" class="navbar-right">
            <button type="submit" class="btn btn-link nav-link text-dark navbar-btn navbar-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Login">Login</a></li>
}